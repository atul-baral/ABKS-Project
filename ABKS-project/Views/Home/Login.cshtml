@model ABKS_project.ViewModels.LoginViewModel

@if (TempData["Register_Success"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["Register_Success"]
    </div>
}@if  (TempData["Email_Confirmation_Message"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["Email_Confirmation_Message"]
    </div>
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,600;1,700&family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
        rel="stylesheet">
    <title>Login</title>
    <style>
        :root {
            --color-primary: #009282;
            --bodyBackgroundColor: #f8f9fa;
            --bodyColor: #212529;
            --bodyFontFamily: 'Open Sans', sans-serif;
            --bodyFontFamilyFallback: sans-serif;
            --bodyFontSize: 16px;
            --bodyFontWeight: 400;
            --bodyLineHeight: 1.5;
            --titleColor: #212529;
        }

