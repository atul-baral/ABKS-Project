@model ABKS_project.ViewModels.UserEvaluationViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Evaluations and Attendance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h2>Weekly Evaluation Data</h2>
        <canvas id="barChart"></canvas>
    </div>

    <div class="container mt-5">
        <h2>Weekly Attendance Data</h2>
        <canvas id="lineChart"></canvas>
    </div>

    <script>
        // Data for the bar chart
        var barChartData = {
            labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Labels)),
            datasets: [
                {
                    label: 'Average Discipline Test',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.WeeklyEvaluations.Select(e => e.AverageDisciplineTest))),
                    backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'rgb(255, 99, 132)',
                    borderWidth: 1
                },
                {
                    label: 'Average Fitness Test',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.WeeklyEvaluations.Select(e => e.AverageFitnessTest))),
                    backgroundColor: 'rgb(54, 162, 235)',
                    borderColor: 'rgb(54, 162, 235)',
                    borderWidth: 1
                },
                {
                    label: 'Average Write Test',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.WeeklyEvaluations.Select(e => e.AverageWriteTest))),
                    backgroundColor: 'rgb(255, 205, 86)',
                    borderColor: 'rgb(255, 205, 86)',
                    borderWidth: 1
                }
            ]
        };

        // Data for the line chart
        var lineChartData = {
            labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Labels)),
            datasets: [
                {
                    label: 'Average Attendance Percentage',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.WeeklyAttendances.Select(a => a.AttendancePercentage))),
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                }
            ]
        };

        // Configuration for the bar chart
        var barChartConfig = {
            type: 'bar',
            data: barChartData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        };

        // Configuration for the line chart
        var lineChartConfig = {
            type: 'line',
            data: lineChartData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        };

        // Create the charts
        var barChart = new Chart(document.getElementById('barChart'), barChartConfig);
        var lineChart = new Chart(document.getElementById('lineChart'), lineChartConfig);
    </script>
</body>
</html>
