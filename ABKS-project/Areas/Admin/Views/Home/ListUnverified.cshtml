@model IEnumerable<ABKS_project.Models.User>;

<style>
    .modal-backdrop {
        backdrop-filter: blur(1px);
        background-color: rgba(0, 0, 0, 0.5);
    }

    .image-preview {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 9999;
        background-color: white;
        padding: 10px;
        border: 1px solid #ccc;
    }

        .image-preview img {
            max-width: 600px;
            max-height: 600px;
            display: block;
            margin: 0 auto;
        }
</style>

<h2>UnVerified Users</h2>

<table class="management-table table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Education</th>
            <th>Age</th>
            <th>Citizenship Photo</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="managementContent">
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Education</td>
                <td>@user.Age</td>
                <td>
                    <div class="image-container">
                        <img src="~/Images/@user.CitizenshipPhoto" alt="Citizenship Photo" width="100" height="100" class="citizenship-photo">
                        <div class="image-preview">
                            <img src="~/Images/@user.CitizenshipPhoto" alt="Citizenship Photo">
                        </div>
                    </div>
                </td>
                <td class="d-flex gap-2">
                    <button type="button" class="btn btn-sm btn-success btn-management" data-bs-toggle="modal" data-bs-target="#acceptModal_@user.UserId">Accept</button>
                    <!-- Accept Modal -->
                    <div class="modal fade" id="acceptModal_@user.UserId" tabindex="-1" aria-labelledby="acceptModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="acceptModalLabel">Accept User</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p><b>Accept User: </b><i>@user.Email</i><b>?</b></p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <form id="acceptForm_@user.UserId" asp-area="Admin" asp-controller="Home" asp-action="AcceptUser" method="post">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <button type="submit" class="btn btn-success">Accept</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Reject Modal -->
                    <button type="button" class="btn btn-sm btn-danger btn-management" data-bs-toggle="modal" data-bs-target="#rejectModal_@user.UserId">Reject</button>
                    <div class="modal fade" id="rejectModal_@user.UserId" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="rejectModalLabel">Reject User</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p><b>Reject User: </b><i>@user.Email</i><b>?</b></p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <form asp-area="Admin" asp-controller="Home" asp-action="RejectUser" method="post">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <button type="submit" class="btn btn-danger">Reject</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



<script>
    document.addEventListener('DOMContentLoaded', () => {
        $('.citizenship-photo').hover(function () {
            var preview = $(this).siblings('.image-preview');
            preview.show();
        }, function () {
            $(this).siblings('.image-preview').hide();
        });
    });

</script>


