<style>
    .modal-backdrop {
        backdrop-filter: blur(1px);
        background-color: rgba(0, 0, 0, 0.5);
    }

    .pdf-preview {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 9999;
        background-color: white;
        padding: 10px;
        border: 0.5px solid #ccc;
    }

        .pdf-preview iframe {
            width: 800px; 
            height: 600px;
            border: none;
            position: relative;
            margin-top: 20px; 
        }

    .close-btn {
        position: absolute;
        top: 0px; 
        right: 5px;
        cursor: pointer;
        font-size: 20px; 
        color: red; 
    }
</style>

<h2>UnVerified Users</h2>

<table class="management-table table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Education</th>
            <th>Age</th>
            <th>Citizenship PDF</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="managementContent">
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Education</td>
                <td>@user.Age</td>
                <td>
                    <div class="pdf-container">
                        <a href="#" class="pdf-link" data-pdf-url="/Documents/Citizenships/@user.Citizenship">View PDF</a>
                        <div class="pdf-preview">
                            <iframe src=""></iframe>
                            <button type="button" class="btn-close close-btn" aria-label="Close"></button> <!-- Bootstrap 5 close icon -->
                        </div>
                    </div>
                </td>
                <td class="d-flex gap-2">
                    <button type="button" class="btn btn-sm btn-success btn-management" data-bs-toggle="modal" data-bs-target="#acceptModal_@user.UserId">Accept</button>
                    <!-- Accept Modal -->
                    <div class="modal fade" id="acceptModal_@user.UserId" tabindex="-1" aria-labelledby="acceptModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="acceptModalLabel">Accept User</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p><b>Accept User: </b><i>@user.Email</i><b>?</b></p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <form id="acceptForm_@user.UserId" asp-area="Admin" asp-controller="Home" asp-action="AcceptUser" method="post">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <button type="submit" class="btn btn-success">Accept</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Reject Modal -->
                    <button type="button" class="btn btn-sm btn-danger btn-management" data-bs-toggle="modal" data-bs-target="#rejectModal_@user.UserId">Reject</button>
                    <div class="modal fade" id="rejectModal_@user.UserId" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="rejectModalLabel">Reject User</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p><b>Reject User: </b><i>@user.Email</i><b>?</b></p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <form asp-area="Admin" asp-controller="Home" asp-action="RejectUser" method="post">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <button type="submit" class="btn btn-danger">Reject</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        $('.pdf-link').click(function (e) {
            e.preventDefault();
            var pdfUrl = $(this).data('pdf-url');
            var preview = $(this).siblings('.pdf-preview');
            preview.find('iframe').attr('src', pdfUrl);
            preview.show();
        });

        $('.close-btn').click(function () {
            $(this).closest('.pdf-preview').hide();
        });

        // Prevent closing PDF preview when clicking on the iframe
        $('.pdf-preview iframe').click(function (e) {
            e.stopPropagation();
        });
    });
</script>
