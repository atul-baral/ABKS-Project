﻿
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> ABKS_Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        ::after,
        ::before {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        a {
            text-decoration: none;
        }

        li {
            list-style: none;
        }

        h1 {
            font-weight: 600;
            font-size: 1.5rem;
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            display: flex;
            min-height: 100vh;
        }

        #sidebar {
            width: 260px;
            min-width: 260px;
            z-index: 1000;
            transition: all .25s ease-in-out;
            background-color: #0e2238;
            display: flex;
            flex-direction: column;
            position: fixed; /* Keep sidebar fixed */
            top: 0;
            left: 0;
            bottom: 0;
            overflow-y: auto; /* Allow sidebar to scroll */
        }

        .toggle-btn {
            background-color: transparent;
            cursor: pointer;
            border: 0;
            padding: 1rem 1.5rem;
        }

            .toggle-btn i {
                font-size: 1.5rem;
                color: #FFF;
            }

        .sidebar-logo {
            margin: auto 0;
        }

            .sidebar-logo a {
                color: #FFF;
                font-size: 1.15rem;
                font-weight: 600;
            }

        .sidebar-nav {
            padding: 2rem 0;
            flex: 1 1 auto;
        }

        a.sidebar-link {
            padding: .625rem 1.625rem;
            color: #FFF;
            display: block;
            font-size: 0.9rem;
            white-space: nowrap;
            border-left: 3px solid transparent;
        }

        .sidebar-link i {
            font-size: 1.1rem;
            margin-right: .75rem;
        }

        a.sidebar-link:hover {
            background-color: rgba(255, 255, 255, .075);
            border-left: 3px solid #3b7ddd;
        }

        .sidebar-item {
            position: relative;
        }

        #sidebar:not(.expand) .sidebar-item .sidebar-dropdown {
            position: absolute;
            top: 0;
            left: 70px;
            background-color: #0e2238;
            padding: 0;
            min-width: 15rem;
            display: none;
        }

        #sidebar:not(.expand) .sidebar-item:hover .has-dropdown + .sidebar-dropdown {
            display: block;
            max-height: 15em;
            width: 100%;
            opacity: 1;
        }

        .main {
            flex: 1;
            padding: 20px;
            overflow-y: auto; /* Allow main content to scroll */
            background-color: #fafbfe;
            margin-left: 260px; /* Keep space for sidebar */
        }


        .sidebar-footer {
            position: absolute;
            bottom: 20px;
            left: 0;
            width: 100%;
            text-align: center;
        }

            .sidebar-footer .mt-auto {
                margin-top: auto; /* Ensures the logout link stays at the bottom */
            }
    </style>


</head>

<body>
    <div class="wrapper">
        <aside id="sidebar" class="expand">
            <div class="d-flex">
                <div class="toggle-btn">
                    <i class="bi bi-grid"></i>
                </div>
                <div class="sidebar-logo">
                    <a href="#">Admin Dashboard</a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link">
                        <i class="bi bi-person"></i>
                        <span>Profile</span>
                    </a>
                </li>

               
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown dropdown-toggle" data-bs-toggle="collapse"
                       data-bs-target="#user-management" aria-expanded="false" aria-controls="user-management">
                        <i class="bi bi-person"></i>
                        <span>User Management</span>

                    </a>
                    <ul id="user-management" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a asp-area="Admin" asp-controller="User" asp-action="ListUnverified" class="sidebar-link">Unverified Users</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link collapsed has-dropdown dropdown-toggle" data-bs-toggle="collapse"
                               data-bs-target="#verified-users" aria-expanded="false" aria-controls="verified-users">
                                Batch Users

                            </a>

                            <ul id="verified-users" class="sidebar-dropdown list-unstyled collapse">
                                <li class="sidebar-item">
                                    <a asp-area="Admin" asp-controller="User" asp-action="ListActive" class="sidebar-link">Current Batch</a>
                                </li>
                                <li class="sidebar-item">
                                    <a asp-area="Admin" asp-controller="User" asp-action="ListInActive" class="sidebar-link">Past Batch</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>


                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown dropdown-toggle" data-bs-toggle="collapse"
                       data-bs-target="#student-evaluation" aria-expanded="false" aria-controls="student-evaluation">
                        <i class="bi bi-shield-lock"></i>
                        <span>Student Evaluation</span>
                    </a>
                    <ul id="student-evaluation" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a asp-area="Admin" asp-controller="User" asp-action="ManageAttendance" class="sidebar-link">Attendance Entry</a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-area="Admin" asp-controller="User" asp-action="ManageEvaluation" class="sidebar-link">Evaluations Entry</a>
                        </li>
                    </ul>
                </li>



                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown dropdown-toggle" data-bs-toggle="collapse"
                       data-bs-target="#product-management" aria-expanded="false" aria-controls="product-management">
                        <i class="bi bi-check"></i>
                        <span>Product Management</span>
                    </a>
                    <ul id="product-management" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a asp-area="Admin" asp-controller="Product" asp-action="ListProduct" class="sidebar-link">Product Detail</a>
                        </li>
                       @*  <li class="sidebar-item">
                            <a asp-area="Admin" asp-controller="Product" asp-action="ProductCategories" class="sidebar-link">Product Categories</a>
                        </li> *@
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown dropdown-toggle" data-bs-toggle="collapse"
                       data-bs-target="#order-management" aria-expanded="false" aria-controls="order-management">
                        <i class="bi bi-filter"></i>
                        <span>Order Management</span>
                    </a>
                    <ul id="order-management" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a asp-area="Admin" asp-controller="OrderManagement" asp-action="Index" class="sidebar-link">Order Detail</a>
                        </li>

                    </ul>
                </li>




            </ul>
            <div class="sidebar-footer">
                <div class="mt-auto" style="margin-right: 8rem;">
                    <a asp-area="" asp-controller="Home" asp-action="Logout" class="sidebar-link">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </div>
        </aside>
        <div class="main p-3">
            <!-- RenderBody content will be loaded here -->
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.toggle-btn').click(function () {
                $('#sidebar').toggleClass('expand');
            });

            $('.sidebar-dropdown').on('show.bs.collapse', function () {
                localStorage.setItem($(this).attr('id'), 'expanded');
            });

            $('.sidebar-dropdown').on('hide.bs.collapse', function () {
                localStorage.removeItem($(this).attr('id'));
            });

            $('.sidebar-dropdown').each(function () {
                if (localStorage.getItem($(this).attr('id')) === 'expanded') {
                    $(this).addClass('show');
                }
            });

        });

    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
