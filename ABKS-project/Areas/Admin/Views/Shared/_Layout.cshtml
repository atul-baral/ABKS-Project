@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABKS_project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LoginRegister.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/ABKS_project.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/Cart.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"> @* login +Register  *@
    <style>
        /* Custom styling */
        .sidebar {
            background-color: #343a40;
            color: #fff;
            position: fixed;
            top: 55px;
            bottom: 0;
            left: 0px;
            padding: 25px;
            width: 256px;
            overflow-y: auto;
            z-index: 1000;
        }

        .sidebar h2 {
            color: #ffc107;
            margin-bottom: 20px;
        }

        .sidebar ul {
            padding-left: 0;
            list-style-type: none;
        }

        .sidebar li {
            margin-bottom: 10px;
        }

        .sidebar a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        .sidebar a:hover {
            background-color: #ffc107;
            color: #343a40;
        }

        .sidebar a.active {
            background-color: #6c757d;
        }
    </style>
</head>
<body>
<div class="row">
    <!-- Sidebar -->
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block sidebar">
        <div class="position-sticky">
            <h2>Admin Dashboard</h2>
            <ul class="nav flex-column">

                <li class="nav-item">
                    <a class="nav-link sidebar-item"  asp-area="Admin" asp-controller="Home" asp-action="ListUnverified" >Unverified Users</a>
              </li>
              <li class="nav-item">
                    <a class="nav-link sidebar-item"  asp-area="Admin" asp-controller="Home" asp-action="ListVerified" >Verified Users</a>
              </li>
            </ul>
        </div>
    </nav>

    <!-- Page content -->
   <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 mt-3">

        @RenderBody()
    </main>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script> @* login +regiter js link *@
<script>
    $(document).ready(function () {
        // Highlight active item based on current URL
        var currentUrl = window.location.pathname;
        $(".sidebar-item").each(function () {
            if ($(this).attr("href") === currentUrl) {
                $(this).addClass("active");
            }
        });

        // Maintain active state when clicking on the body
        $("body").click(function (event) {
            if (!$(event.target).closest(".sidebar-item").length) {
                $(".sidebar-item").not(event.target).removeClass("active");
            }
        });
    });
</script>

</body>
</html>
