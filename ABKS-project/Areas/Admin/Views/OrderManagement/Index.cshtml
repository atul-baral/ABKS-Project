@using ABKS_project.Areas.Ecommerce.Models
@model List<Order>

<style>
    h1 {
        font-weight: bold;
        font-size: 2rem;
        color: #0e2238;
        border-bottom: 3px solid #0e2238;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .table-responsive {
        padding: 0px;
        overflow-y: auto;
        height: 600px; /* Set a height to enable scrolling */
    }

    .table {
        border-collapse: collapse;
        width: 100%;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

        .table thead th {
            background-color: #0e2238;
            color: #fff;
            font-weight: 600;
            text-align: center;
            vertical-align: middle;
            padding: 15px;
            position: sticky;
            top: 0;
            z-index: 1;
        }

            .table thead th i {
                display: inline-block;
                margin-right: 5px;
                vertical-align: middle;
            }

        .table tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .table tbody tr:hover {
            background-color: #e9ecef;
        }

        .table tbody td {
            text-align: center;
            vertical-align: middle;
            padding: 12px;
        }

    .btn-primary {
        background-color: #0e2238;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0c1c31;
        }

    .custom-select {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        background: url('data:image/svg+xml;utf8,<svg viewBox="0 0 140 140" xmlns="http://www.w3.org/2000/svg"><polygon points="0,0 140,0 70,70" fill="black"/></svg>') no-repeat right 10px center;
        background-size: 10px;
        padding-right: 30px;
        width: 150px;
    }

        .custom-select.form-control {
            display: inline-block;
        }

    .btn-sm {
        padding: 5px 10px;
    }

    .action-buttons .btn {
        margin-right: 5px;
    }

    .form-inline {
        display: flex;
        align-items: center;
    }

        .form-inline .form-control {
            margin-right: 10px;
            width: auto;
            flex: 1;
        }

        .form-inline button {
            flex-shrink: 0;
        }
</style>

<h1>Admin Operations</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th class="text-center"><i class="fas fa-calendar-alt"></i><br /> Create Date</th>
                <th class="text-center"><i class="fas fa-info-circle"></i><br /> Status</th>
                <th class="text-center"><i class="fas fa-user"></i><br /> Name</th>
                <th class="text-center"><i class="fas fa-envelope"></i><br /> Email</th>
                <th class="text-center"><i class="fas fa-phone"></i><br /> Mobile Number</th>
                <th class="text-center"><i class="fas fa-map-marker-alt"></i><br /> Address</th>
                <th class="text-center"><i class="fas fa-credit-card"></i><br /> Payment Method</th>
                <th class="text-center"><i class="fas fa-check"></i><br /> Is Paid</th>
                <th class="text-center"><i class="fas fa-edit"></i><br /> Update Status</th>
                <th class="text-center"><i class="fas fa-money-check-alt"></i><br /> Update Payment</th>
                <th class="text-center"><i class="fas fa-trash-alt"></i><br /> Delete Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.CreateDate</td>
                    <td>@order.OrderStatus.StatusName</td>
                    <td>@order.Name</td>
                    <td>@order.Email</td>
                    <td>@order.MobileNumber</td>
                    <td>@order.Address</td>
                    <td>@order.PaymentMethod</td>
                    <td>@(order.IsPaid ? "Paid" : "Not Paid")</td>
                    <td>
                        <form class="form-inline" asp-controller="OrderManagement" asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="orderId" value="@order.Id" />
                            <select name="orderStatusId" class="form-control custom-select">
                                @if (ViewBag.OrderStatuses != null)
                                {
                                    @foreach (var status in ViewBag.OrderStatuses as List<OrderStatus>)
                                    {
                                        <option value="@status.Id">@status.StatusName</option>
                                    }
                                }
                            </select>
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Update
                            </button>
                        </form>
                    </td>
                    <td>
                        <form class="form-inline" asp-controller="OrderManagement" asp-action="UpdatePayment" method="post">
                            <input type="hidden" name="orderId" value="@order.Id" />
                            <select name="isPaid" class="form-control custom-select">
                                <option value="true">Paid</option>
                                <option value="false">Not Paid</option>
                            </select>
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fas fa-money-check-alt"></i> Update
                            </button>
                        </form>
                    </td>
                    <td>
                        <div class="action-buttons">
                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal_@order.Id">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>

                        <div class="modal fade" id="deleteModal_@order.Id" tabindex="-1" aria-labelledby="deleteModalLabel_@order.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title" id="deleteModalLabel_@order.Id">Delete Order</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p><b>Are you sure you want to delete the order for:</b> <i>@order.Name</i>?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <form asp-controller="OrderManagement" asp-action="DeleteOrder" method="post">
                                            <input type="hidden" name="orderId" value="@order.Id" />
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Ensure Bootstrap and FontAwesome CSS and JS are included -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
