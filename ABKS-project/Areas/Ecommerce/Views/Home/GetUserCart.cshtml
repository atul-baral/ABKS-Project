@using ABKS_project.Areas.Ecommerce.Models
@model ShoppingCart
@{
    ViewData["Title"] = "GetUserCart";
}

<div style="width:90%;margin:auto;padding-top:1rem" class="mt-2">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {
        <h5>My Cart</h5>

        <table class="table table-striped">
            <tr>
                <th>Products</th>
                <th>Image</th>
                <th>Category</th>
                <th>Unit Price x Quantity(RS)</th>
                <th>Total Price</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model.CartDetails)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>
                        @if (string.IsNullOrEmpty(item.Product.ProductImg))
                        {
                            <img src="/images/NoImage.png" style="width:80px;height:100px" />
                        }
                        else
                        {
                            <img src="~/Images/Products/@item.Product.ProductImg" style="width:80px;height:100px" />
                        }
                    </td>
                    <td>@item.Product.ProductCategory.CategoryName</td>
                    <td>@item.Product.ProductPrice X @item.Quantity</td>
                    <td>@(item.Product.ProductPrice * item.Quantity)</td>
                    <td>
                        <a class="btn btn-info" href="javascript:void(0)" onclick="addCartItem(@item.ProductId)">+</a>
                        <a class="btn btn-info" href="javascript:void(0)" onclick="confirmRemoveCartItem(@item.ProductId, @item.Quantity)">-</a>
                    </td>
                </tr>
            }
        </table>

        <div class="my-2">
            <h5>Total(RS): </h5>
            @(Model.CartDetails.Select(item => item.Product.ProductPrice * item.Quantity).Sum())
        </div>

        <div class="my-2">
            <a class="btn btn-primary" href="/Ecommerce/Home/Checkout">Checkout</a>
        </div>

    }
    else
    {
        <h5>Cart is empty</h5>
    }
</div>

<!-- Modal -->
<div class="modal fade" id="confirmRemoveModal" tabindex="-1" aria-labelledby="confirmRemoveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmRemoveModalLabel">Confirm Remove Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to remove this item from your cart?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmRemoveButton">Remove</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.5/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
    <script>
        function addCartItem(productId) {
            $.ajax({
                url: `/Ecommerce/Home/AddItem`,
                type: 'GET',
                data: { productId: productId },
                success: function (result) {
                    window.location.reload();
                },
                error: function (err) {
                    console.log("Error:", err);
                }
            });
        }

        function confirmRemoveCartItem(productId, quantity) {
            if (quantity <= 1) {
                $('#confirmRemoveButton').data('productId', productId);
                $('#confirmRemoveModal').modal('show');
            } else {
                removeCartItem(productId);
            }
        }

        $('#confirmRemoveButton').on('click', function () {
            var productId = $(this).data('productId');
            removeCartItem(productId);
        });

        function removeCartItem(productId) {
            $.ajax({
                url: `/Ecommerce/Home/RemoveItem`,
                type: 'GET',
                data: { productId: productId },
                success: function (result) {
                    window.location.reload();
                },
                error: function (err) {
                    console.log("Error:", err);
                }
            });
        }
    </script>
}
