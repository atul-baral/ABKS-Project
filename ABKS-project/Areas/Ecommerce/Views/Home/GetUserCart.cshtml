@using ABKS_project.Areas.Ecommerce.Models
@model ShoppingCart
@{
    ViewData["Title"] = "GetUserCart";
}

<div style="width:90%;margin:auto" class="mt-2">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {
        <h5>My Cart</h5>

        <table class="table table-striped">
            <tr>
                <th>Products</th>
                <th>Image</th>
                <th>Category</th>
                <th>Unit Price x Quantity(RS)</th>
                <th>Total Price</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model.CartDetails)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>
                        @if (string.IsNullOrEmpty(item.Product.ProductImg))
                        {
                            <img src="/images/NoImage.png" style="width:80px;height:100px" />
                        }
                        else
                        {
                            <img src="~/Images/Products/@item.Product.ProductImg" style="width:80px;height:100px" />
                        }
                    </td>
                    <td>@item.Product.ProductCategory.CategoryName</td>
                    <td>@item.Product.ProductPrice X @item.Quantity</td>
                    <td>@(item.Product.ProductPrice * item.Quantity)</td>
                    <td>

                        @* Increase Quantity button should be invisible if not enough stock *@
                        <a class="btn btn-info" href="/Ecommerce/Home/addItem?/productId=@item.ProductId">+</a>
                      
                       
                        @* Decrement button *@
                        <a class="btn btn-info" href="/Ecommerce/Home/removeitem?productId=@item.ProductId">-</a>
                    </td>
                </tr>
            }
        </table>

        <div class="my-2">
            <h5>Total(RS): </h5>
            @(Model.CartDetails.Select(item => item.Product.ProductPrice * item.Quantity).Sum())
        </div>

        <div class="my-2">
            <a class="btn btn-primary" href="/Cart/Checkout">Checkout</a>
        </div>

    }
    else
    {
        <h5>Cart is empty</h5>
    }
</div>

